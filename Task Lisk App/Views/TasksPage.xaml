<Page
    x:Class="Task_Lisk_App.Views.TasksPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
	<Grid x:Name="ContentArea">
		<StackPanel Orientation="Horizontal">
			<CommandBar Background="Transparent" Margin="-16,0,0,0" DefaultLabelPosition="Right">
				<AppBarButton x:Name="AddTask" Icon="Add" Label="Add" ToolTipService.ToolTip="Adds a new task to the list." Click="AddTask_Click"/>
				<AppBarButton x:Name="EditTask" Icon="Edit" Label="Edit" ToolTipService.ToolTip="Edit tasks." Click="EditTask_Click"/>
				<AppBarButton x:Name="DeleteTask" Icon="Delete" Label="Delete" ToolTipService.ToolTip="Remove tasks." Click="RemoveTask_Click"/>
			</CommandBar>
			<InfoBar IsOpen="False" x:Name="CancelBar" Severity="Error" Title="Task cancelled" Message="The task was not created/modified because it was cancelled." />
			<InfoBar IsOpen="false" x:Name="SuccessBar" Severity="Success" Title="Success" Message="Task successfully created/modified."/>
			<TextBlock x:Name="pocText" Margin="20,14,0,0"/>
		</StackPanel>

		<ListView x:Name="TestView" SelectionMode="Multiple" ScrollViewer.HorizontalScrollMode="Enabled" ScrollViewer.HorizontalScrollBarVisibility="Auto" Margin="0,80,0,0"/>
	</Grid>
</Page>